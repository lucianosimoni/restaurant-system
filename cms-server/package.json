{
  "name": "cms-server",
  "description": "CMS Server that serves all other Restaurant Systems",
  "version": "1.0.0",
  "main": "src/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "npm copyfiles && npm build:payload && npm build:server",
    "serve": "PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "payload": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload"
  },
  "dependencies": {
    "@payloadcms/bundler-vite": "^0.1.6",
    "@payloadcms/db-postgres": "^0.x",
    "@payloadcms/richtext-slate": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "payload": "^2.0.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "cross-env": "^7.0.3",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.8.4"
  }
}
